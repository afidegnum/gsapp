<ProjectActivityScreen>:
    name: 'projectsactiv'
    ListView:
        item_strings: app.projects
        id: projects


    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'

        BoxLayout:
            id: camera
            play: True

        ToggleButton:
            text: "Play"
            on_press: camera.play = True
            size_hint_y: None
            height: '48dp'

        BoxLayout:
            padding: 50, 50
            size_hint_x: .8
            size_hint_y: .3



            Button:
                id: 'projectsButton'
                on_release: app.root.current = 'projects'
                background_color: 0,0,0,0
